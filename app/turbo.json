{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "pipeline": {
    "export": {
      "dependsOn": ["^build", "build:tailwind-rn"]
    },
    "build:tailwind-rn": {
      "inputs": ["tailwind.css"],
      "outputs": ["tailwind.json"],
      "dependsOn": ["build:tailwindcss"]
    },
    "build:tailwindcss": {
      "inputs": ["app/**/*.{js,jsx,ts,tsx}"],
      "outputs": ["tailwind.css"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "watch:tailwind-rn": {
      "cache": false,
      "persistent": true
    },
    "watch:tailwindcss": {
      "cache": false,
      "persistent": true
    }
  }
}
